{
  "name": "brimmar/phpoption",
  "description": "Rust-like Option Type implementation for PHP",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "option",
    "rust",
    "functional",
    "monad",
    "maybe",
    "null-safety"
  ],
  "homepage": "https://github.com/brimmar/phpoption",
  "support": {
    "issues": "https://github.com/brimmar/phpoption/issues",
    "source": "https://github.com/brimmar/phpoption"
  },
  "require": {
    "php": ">=8.3"
  },
  "autoload": {
    "psr-4": {
      "Brimmar\\PhpOption\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Bryan",
      "email": "bryan.sergio@brimmar.dev"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "pestphp/pest": "^2.34",
    "phpstan/phpstan": "^2.1",
    "laravel/pint": "^1.26"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}