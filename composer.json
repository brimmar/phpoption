{
  "name": "brimmar/phpoption",
  "description": "Rust-like Option Type implementation for PHP",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1"
  },
  "autoload": {
    "psr-4": {
      "Brimmar\\PhpOption\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Bryan",
      "email": "bryan.sergio@brimmar.dev"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "pestphp/pest": "^2.34"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
